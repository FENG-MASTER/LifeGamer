<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/bt_dialog_edit_task_reward_achievement_del"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        android:background="@null"
        android:src="@drawable/ic_clear_red_24dp"/>


    <TextView
        android:id="@+id/tv_item_dialog_edit_task_reward_achievement_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/bt_dialog_edit_task_reward_achievement_del"
        android:paddingLeft="5dp"/>



    <android.support.design.widget.TextInputLayout
        android:id="@+id/tl_dialog_edit_task_reward_achievement_rate"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content">

        <EditText
            android:hint="获得概率"
            android:id="@+id/et_item_dialog_edit_task_reward_achievement_rate"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"/>

    </android.support.design.widget.TextInputLayout>




</RelativeLayout>