<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <ImageButton
        android:id="@+id/bt_dialog_edit_task_reward_item_del"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        android:background="@null"
        android:src="@drawable/ic_clear_red_24dp"/>


    <TextView
        android:id="@+id/tv_item_dialog_edit_task_reward_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="3"
        android:maxLength="8"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tl_dialog_edit_task_reward_item_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center">

        <EditText
            android:id="@+id/et_item_dialog_edit_task_reward_item_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:hint="数量"
            android:inputType="numberSigned"/>

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/tl_dialog_edit_task_reward_item_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center">

        <EditText
            android:id="@+id/et_item_dialog_edit_task_reward_item_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:hint="获得概率"
            android:inputType="number"/>

    </android.support.design.widget.TextInputLayout>


</LinearLayout>