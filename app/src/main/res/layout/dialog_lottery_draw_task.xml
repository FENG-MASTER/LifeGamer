<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorDarkBackGround"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv_dialog_lottery_draw_task_deadline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="抽取"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tv_dialog_lottery_draw_task_deadline2"
                android:layout_toRightOf="@id/tv_dialog_lottery_draw_task_deadline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今天"
                android:textColor="@color/red"
                android:textSize="18sp"/>





            <TextView
                android:layout_toRightOf="@id/tv_dialog_lottery_draw_task_deadline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="要完成的任务"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>

        </RelativeLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_dialog_lottery_draw_task_list"
            android:layout_width="match_parent"
            android:layout_height="450dp">

        </android.support.v7.widget.RecyclerView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/bt_dialog_lottery_draw_task_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorDarkBackGround"
                android:padding="10dp"
                android:src="@drawable/ic_add_circle_black_24dp"
                />


            <ImageButton
                android:id="@+id/bt_dialog_lottery_draw_task_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorDarkBackGround"
                android:padding="10dp"
                android:src="@drawable/ic_lottery_draw"
                />

            <ImageButton
                android:id="@+id/bt_dialog_lottery_draw_task_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorDarkBackGround"
                android:padding="10dp"
                android:src="@drawable/ic_cancel_black_24dp"
                />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>